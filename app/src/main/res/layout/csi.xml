<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background_map"
    android:scaleType="centerCrop"
    android:background="#fff">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <org.osmdroid.views.MapView android:id="@+id/map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <br.com.homembala.dedos.Panel
            android:id="@+id/drawing_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vehicles_layout"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            >
            <RelativeLayout
                android:id="@+id/vehicles_canvas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/grid"
                android:orientation="vertical" />
            <ImageButton
                android:id="@+id/show_pallette"
                android:layout_margin="10dp"
                android:src="@drawable/down"
                android:background="@drawable/round"
                android:layout_width="32dp"
                android:layout_height="32dp" />
            <include
                layout="@layout/pallette"
                android:visibility="gone" />
            <LinearLayout
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/vehicles_pallete"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                >
            </LinearLayout>
        </RelativeLayout>
        <br.com.homembala.dedos.util.Pega
            android:id="@+id/pegador"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
        <TextView
            android:layout_gravity="bottom"
            android:id="@+id/messageria"
            android:text="mensagens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>